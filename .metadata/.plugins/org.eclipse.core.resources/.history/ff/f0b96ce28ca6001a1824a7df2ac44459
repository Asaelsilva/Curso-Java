package oo.composicao.PrimeiroDesafio;

import sun.jvm.hotspot.ci.ciEnv;

public class Sistema {

	public static void main(String[] args) {

		Cliente cliente = new Cliente("Asael Silva");

		Compra compra = new Compra();
		compra.adicionarItem("Lapis", 100, 1.00);
		compra.adicionarItem(new Produto("Caneta", 5.00 ),10);
		
		Compra compra2 = new Compra();
		compra2.adicionarItem("guitarra", 2, 600.00);
		compra2.adicionarItem(new Produto("Amplificador", 250.00), 1);
		
	
		cliente.compra.add(compra);
		cliente.compra.add(compra2);
	
		System.out.println(cliente.obterValorTotal());
	
	
	
	}

}
