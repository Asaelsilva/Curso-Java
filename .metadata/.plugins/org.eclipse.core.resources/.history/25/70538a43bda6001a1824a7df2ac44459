package oo.heranca;

public class Jogador {

	int vida = 100;
	int x, y;

	
	boolean atacar(Jogador oponente) {
		
		int deltax = Math.abs(x - oponente.x);
		int deltay = Math.abs(y - oponente.x);
		
		if (deltax == 0 && deltay == 1) {
			oponente.vida
		}
		return true;
	}
	
	
	
	boolean andar(Direcao direcao) {

		switch (direcao) {
		case NORTE:
			y--;
			break;
		case LESTE:
			x++;
			break;
		case SUL:
			y++;
			break;
		case OESTE:
			x--;
			break;

		}

		return true;

	}

}
