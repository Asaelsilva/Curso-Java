package classe.DesafioModulo;

public class Jantar {

	public static void main(String[] args) {

		Pessoa pessoa = new Pessoa("Asael", 80.00);
		
		
		Comida comida = new Comida("Arroz, feijão, bife e batata", 0.500);		
		pessoa.comer(comida);
		
		System.out.println(pessoa.nome + " comeu um " + comida.nome + " de " + comida.peso + " Kls");		
		System.out.println("Agora seu peso é: " + pessoa.peso);
		
		Comida comida2 = new Comida("Hamburger", 1.50); 		
		pessoa.comer(comida2);
		
		System.out.println(pessoa.nome + " comeu um " + comida2.nome + " de " + comida2.peso + " Kls");
		System.out.println("Peso: " + pessoa.peso);
	}

}
