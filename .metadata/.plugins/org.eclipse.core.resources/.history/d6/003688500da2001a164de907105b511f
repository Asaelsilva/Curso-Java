package classe;

public class ProdutoTeste {

	public static void main(String[] args) {

		Produto p1 = new Produto("Notbook", 1000, 0.20);
		Produto p2 = new Produto();

		p2.nome = "Caderno";
		p2.preco = 20.00;
		p2.desconto = 0.20;

		System.out.println("Produto: " + p1.nome);
		System.out.println("Preço: " + p1.preco);
		System.out.println("Desconto: " + p1.desconto + "%");
		var precoFinal1 = p1.precoComDesconto();
				
		System.out.printf("Preço final: %.2f\n",precoFinal1);

		System.out.println("\n\n");

		System.out.println("Produto: " + p2.nome);
		System.out.println("Preço: " + p2.preco);
		System.out.println("Desconto: " + p2.desconto + "%");
		var precoFinal2 = p2.precoComDesconto();
		
		System.out.printf("Preço final: %.2f\n",precoFinal2);
		
		var carrinho = (precoFinal2 + precoFinal1) /2;
		
		System.out.println("\n\n");
		
		System.out.printf("Media de preço dos produtos em carrinho: %.2f", carrinho);

	}

}
