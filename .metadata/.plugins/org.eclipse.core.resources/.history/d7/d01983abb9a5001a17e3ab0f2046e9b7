package classe.DesafioModulo;

public class Pessoa {

	String nome;
	double peso;

	public Pessoa(String nome, double peso) {

		this.nome = nome;
		this.peso = peso;

	}

	double comer(Comida comida) {

		this.peso += comida.peso;
		return this.peso;
	}

	String Cliente(Pessoa pessoa) {
		
		var n = pessoa.nome;
		var p = Double.toString(pessoa.peso);
		System.out.println("Nome: " + n + "\nPeso" + p);
		
		return "Nome: " + n + "\nPeso" + p;
	}
}
