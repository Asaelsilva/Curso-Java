package streams;

import java.util.Arrays;
import java.util.List;
import java.util.function.Function;

public class DesafioFilter {

	public static void main(String[] args) {

		
		Aluno a1 = new Aluno("Asael", 8.5, 1.80);
		Aluno a2 = new Aluno("Amanda", 7.1, 1.71);
		Aluno a3 = new Aluno("lais", 9.9, 1.60);
		Aluno a4 = new Aluno("João", 5.4, 1.67);
		Aluno a5 = new Aluno("Juninnho", 5.6, 1.75);
		Aluno a6 = new Aluno("Bia", 8.8, 1.64);
		Aluno a7 = new Aluno("Rafaela", 6.7, 1.55);
		Aluno a8 = new Aluno("Rafael", 7.8, 1.98);
		Aluno a9 = new Aluno("Sara", 6.6, 1.30);
		Aluno a10 = new Aluno("Jonatas", 8.0, 1.79);
		Aluno a11 = new Aluno("Alex", 6.5, 1.60);
		Aluno a12 = new Aluno("Ferando", 6.5, 1.85);
		
		
		List<Aluno> alunos = Arrays.asList(a1, a2, a3, a4, a5, a6, a7, a8, a9, a10, a11, a12);
		Function<Aluno, String> nomeNota = n -> "Nome: " + n.nome + " Nota: " + n.nota;
		
		String res = nomeNota.toString();
		System.out.println(res);
		
		alunos.stream()
			.filter(a -> a.nome.toUpperCase().startsWith("A"))
			.filter(a -> a.altura > 1.70)
			.map(nomeNota)
			.forEach(System.out::println);
		
		
		
		
	}

}
