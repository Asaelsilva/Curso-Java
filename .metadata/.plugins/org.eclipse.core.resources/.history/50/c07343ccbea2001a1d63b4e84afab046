package arrays;

import java.util.Scanner;

public class DesafioMedia {

	public static void main(String[] args) {

		Scanner entrada = new Scanner(System.in);
		double media = 0;
		
		System.out.println("Quantas notas deseja informar? ");		
		String qtd = entrada.nextLine();
		
		int num = Integer.parseInt(qtd);
		
		System.out.println("\n\nDigite as notas que deseja... \n"
				+ "ao final de cada nota precione tcla enter para pode digitar a proxima. ");
		
		double[] notas = new double[num];
		
		for (int i = 0; i < notas.length; i++) {
			
			System.out.printf("Nota %d : ", i + 1);
			var nota1 = entrada.nextLine();
			double nota2 = Double.parseDouble(nota1);
			notas[i] = nota2; 			
		}
		
		System.out.println("\n\nAs notas digitadas foram..." );
		
		for (double boletim : notas) {
			System.out.println(boletim);
			
			media += boletim;
		}
		
		var mediaFinal = media / num;
		
		entrada.close();
		

	}

}
